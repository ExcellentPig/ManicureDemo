.ar_picker_wrap{
	width: 670rpx;
	border-radius: 20rpx;
	padding: 20rpx;
	margin: 20rpx auto;
	border: 2rpx solid #ccc;
	font-size: 30rpx;
}

.nav_section{
	width: 100%;
}

.nav_section_items{
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	padding: 30rpx;
	border-bottom: 2rpx solid #ddd;
}

.nav_section_items:active{
	background: #ddd;
}

.section_image{
	flex: 2;
	height: 158rpx;
}

.section_image image{
	width: 100%;
	height: 100%;
	display: block;
}

.section_con{
	flex: 6;
	font-size: 26rpx;
	color: #a9a9a9;
	padding-left: 60rpx;
}

.section_con_sub{
	color: #000;
	font-size: 30rpx;
	line-height: 60rpx;
	margin-bottom: 10rpx;
}

.section_con_price{
	font-size: 32rpx;
	color: #000;
}
.section_con_price .price{
	padding-left: 18rpx;
	color: red;
}
